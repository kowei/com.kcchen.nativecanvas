<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/html_options"
>
    <LinearLayout

        android:layout_width="wrap_content"
        android:id="@+id/rich_toolbar"
        android:layout_height="24dp"
        android:gravity="center_vertical"

        >
        <ImageView

            android:id="@+id/makeBold"
            android:layout_marginRight="8dp"
            android:layout_width="24dp"

            android:layout_height="match_parent"
            android:alpha="@string/initial_http_toggle_switcher_alpha"

            android:src="@drawable/nc__ic_bold" />
        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/makeUnderline"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:alpha= "@string/initial_http_toggle_switcher_alpha"

            android:src="@drawable/nc__ic_underline"
            />
        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/makeStrikethrough"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:alpha= "@string/initial_http_toggle_switcher_alpha"

            android:src="@drawable/nc__ic_strikethrough"
            />
        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/makeItalic"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:alpha= "@string/initial_http_toggle_switcher_alpha"

            android:src="@drawable/nc__ic_italic" />

        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/makeScaleX"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nc__ic_textsize" />



        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/makeForeground"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/nc__text_foreground_color"/>
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/makeBackground"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="B"

            android:textAppearance="?android:attr/textAppearanceLarge" />
        <!--<ImageView-->
            <!--android:layout_marginRight="8dp"-->
            <!--android:id="@+id/makeHyperlink"-->

            <!--android:layout_width="24dp"-->

            <!--android:layout_height="match_parent"-->

            <!--android:src="@drawable/nc__ic_hyperlink" />-->
    </LinearLayout>


</LinearLayout>
